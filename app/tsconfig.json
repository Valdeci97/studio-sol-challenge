{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}